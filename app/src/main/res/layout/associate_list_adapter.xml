<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:id="@+id/friends_request_layout"
    android:layout_height="80dp">

    <ImageButton
        android:layout_width="@dimen/detail_circle_size"
        android:id="@+id/light_details"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/white_circle_border"
        android:layout_height="@dimen/detail_circle_size"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:id="@+id/dashboard_deviceName"
        android:textSize="@dimen/medium_app_text_size"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/light_details"
        android:text="Kitchen Light GP 1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_toEndOf="@+id/light_details"
        android:layout_marginBottom="2dp"
        android:weightSum="2">


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:id="@+id/read"
            android:text="Read"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/rect_btn_bg_darkprimary"
            android:textSize="@dimen/app_text_size"
            />


        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:text="ADD"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/rect_btn_bg_darkprimary"
            android:textSize="@dimen/app_text_size"
            />
    </LinearLayout>

</RelativeLayout>