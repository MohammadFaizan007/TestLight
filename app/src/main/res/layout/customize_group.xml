<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerInParent="true"
    android:id="@+id/add_smart_blur"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_border_back"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:gravity="center"

            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/group_device_list">
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group Name 1"
                android:gravity="center"
                android:id="@+id/customize_group_name"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimming Setting"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"

                >
                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/white_circle"
                    android:progress="100"
                    android:min="10"
                    android:layout_toLeftOf="@+id/level_percentage"
                    android:id="@+id/customizeGroupSeekBar"
                    android:theme="@style/AppTheme.SeekBar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:id="@+id/level_percentage"/>
            </RelativeLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Save"
                android:id="@+id/customiseGroupSave"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/rect_btn_bg_darkprimary"
                android:backgroundTint="@color/white"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
